    <h3  style="margin: 60px;">Available Instruments</h3>
      <div class="row">
        <ul>
          <% @instruments.order(:category_id).each do |instrument| %>
            <% if instrument.for_sale == true %>
              <div class="col-lg-4 col-md-6 mb-4" style="float: left;">
                <div class="card h-100">
                  <a href="#"><img class="card-img-top" src="/baby.jpg" alt=""></a>
                  <div class="card-body">
                    <h4 class="card-title">
                      <%= link_to instrument.category.name, instrument_path(instrument) %>
                    </h4>
                    <h5>
                      <li>(<%= instrument.year %>) - 
                      <%= instrument.maker.name %></li>
                    </h5>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </ul>  
      </div>